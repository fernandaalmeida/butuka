<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="application_logo"
        android:paddingTop="0dp"
        android:src="@mipmap/logo" />

    <Button
        android:id="@+id/denuncieBt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#d72446"
        android:text="Faça sua denúncia"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/rightsBt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/denuncieBt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/direitos_bg"
        android:text="Conheça seus direitos"
        android:textColor="#FFF" />
</RelativeLayout>